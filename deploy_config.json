{
    "environment": "production",
    "server": {
        "host": "0.0.0.0",
        "port": 8080,
        "root_dir": "./www"
    },
    "security": {
        "allowed_hosts": ["localhost", "127.0.0.1", "the3rddemon.com"],
        "headers": {
            "X-Content-Type-Options": "nosniff",
            "X-Frame-Options": "DENY",
            "X-XSS-Protection": "1; mode=block",
            "Strict-Transport-Security": "max-age=31536000; includeSubDomains"
        }
    },
    "logging": {
        "level": "INFO",
        "file": "deploy.log"
    },
    "health_check": {
        "endpoint": "/",
        "timeout": 5,
        "retries": 3
    }
}
